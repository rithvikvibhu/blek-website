<div id="stats-container">
  <div id="github-stats-widget" class="bg-white dark:bg-slate-900 rounded-2xl p-6 shadow-sm border border-slate-100 dark:border-slate-800 mb-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-slate-800 dark:text-white">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.1-1.47-1.1-1.47-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
        </svg>
        GitHub Activity
      </h2>
      <span class="text-xs text-slate-500 bg-slate-100 dark:bg-slate-800 px-2 py-1 rounded-full">Last 30 days</span>
    </div>

    <div id="stats-content" class="grid grid-cols-1 md:grid-cols-2 gap-8 hidden">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl text-center">
            <div class="text-3xl font-bold text-slate-900 dark:text-white" id="stat-commits">0</div>
            <div class="text-xs text-slate-500 font-medium uppercase tracking-wide mt-1">Commits</div>
          </div>
          <div class="p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl text-center">
            <div class="text-3xl font-bold text-slate-900 dark:text-white" id="stat-prs">0</div>
            <div class="text-xs text-slate-500 font-medium uppercase tracking-wide mt-1">PRs</div>
          </div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl">
           <div class="text-xs text-slate-500 font-medium uppercase tracking-wide mb-3">Top Languages</div>
           <div id="stat-languages" class="space-y-2">
              <!-- Populated by JS -->
           </div>
        </div>
      </div>

      <div class="flex flex-col justify-between p-4 bg-slate-50 dark:bg-slate-800/50 rounded-xl">
        <div class="text-xs text-slate-500 font-medium uppercase tracking-wide mb-4">Contribution Activity</div>
        <div class="flex-grow flex items-end justify-center">
          <svg id="sparkline-svg" class="w-full h-24 text-primary" preserveAspectRatio="none"></svg>
        </div>
      </div>
    </div>

    <div id="stats-loading" class="flex justify-center py-12">
      <div class="w-8 h-8 border-2 border-primary border-t-transparent rounded-full animate-spin"></div>
    </div>

    <div id="stats-error" class="hidden text-center py-8 text-slate-500">
      Unable to load stats.
    </div>
  </div>

  <div class="flow-root bg-white dark:bg-slate-900 rounded-2xl p-6 shadow-sm border border-slate-100 dark:border-slate-800">
    <h2 class="text-lg font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-slate-800 dark:text-white">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" />
      </svg>
      Recent Activity
    </h2>

    <div id="timeline-loading" class="flex justify-center py-8">
        <div class="w-6 h-6 border-2 border-primary border-t-transparent rounded-full animate-spin"></div>
    </div>

    <div id="timeline-error" class="hidden text-center py-4 text-slate-500 text-sm">
        Unable to load activity.
    </div>

    <ul id="timeline-list" role="list" class="-mb-8 hidden">
        <!-- Populated by JS -->
    </ul>
  </div>
</div>

<script>
  async function loadStats() {
    const statsContent = document.getElementById('stats-content');
    const statsLoading = document.getElementById('stats-loading');
    const statsError = document.getElementById('stats-error');

    const timelineList = document.getElementById('timeline-list');
    const timelineLoading = document.getElementById('timeline-loading');
    const timelineError = document.getElementById('timeline-error');

    try {
      const response = await fetch('/api/stats');
      if (!response.ok) throw new Error('Failed to fetch');
      const data = await response.json();
      const stats = data.github;
      const timeline = data.timeline;

      // --- Render GitHub Stats ---
      document.getElementById('stat-commits').innerText = stats.commits_last_30_days;
      document.getElementById('stat-prs').innerText = stats.prs_last_30_days;

      // Top Languages
      const langContainer = document.getElementById('stat-languages');
      langContainer.innerHTML = stats.top_languages.map(l => `
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-700 dark:text-slate-300">${l.language}</span>
          <span class="text-slate-400">${l.percent}%</span>
        </div>
        <div class="h-1.5 w-full bg-slate-200 dark:bg-slate-700 rounded-full mt-1 overflow-hidden">
          <div class="h-full bg-primary rounded-full" style="width: ${l.percent}%"></div>
        </div>
      `).join('');

      // Sparkline
      const sparkline = stats.contribution_sparkline;
      const max = Math.max(...sparkline, 5);
      const points = sparkline.map((val, i) => {
        const x = (i / (sparkline.length - 1)) * 100;
        const y = 100 - ((val / max) * 100);
        return `${x},${y}`;
      }).join(' ');

      const svg = document.getElementById('sparkline-svg');
      const path = document.createElementNS('http://www.w3.org/2000/svg', 'polyline');
      path.setAttribute('points', points);
      path.setAttribute('fill', 'none');
      path.setAttribute('stroke', 'currentColor');
      path.setAttribute('stroke-width', '1');
      path.setAttribute('stroke-linecap', 'round');
      path.setAttribute('stroke-linejoin', 'round');

      svg.innerHTML = '';
      svg.setAttribute('viewBox', '0 0 100 100');
      svg.appendChild(path);

      statsLoading.classList.add('hidden');
      statsContent.classList.remove('hidden');

      // --- Render Timeline ---
      timelineList.innerHTML = timeline.map((item, idx) => {
         const isLast = idx === timeline.length - 1;
         let icon;
         let colorClass;

         switch(item.type) {
             case 'commit':
                 icon = `<svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-13.5a.75.75 0 00-1.5 0v5c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V4.5z" clip-rule="evenodd" /></svg>`;
                 colorClass = 'bg-blue-400';
                 break;
             case 'pr':
                 icon = `<svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M4 16.5v-13h-.25a.75.75 0 010-1.5h12.5a.75.75 0 010 1.5H16v13h.25a.75.75 0 010 1.5h-3.5a.75.75 0 01-.75-.75v-2.5a.75.75 0 00-.75-.75h-2.5a.75.75 0 00-.75.75v2.5a.75.75 0 01-.75.75h-3.5a.75.75 0 010-1.5H4z" clip-rule="evenodd" /></svg>`;
                 colorClass = 'bg-purple-400';
                 break;
             case 'post':
                 icon = `<svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 2c-1.716 0-3.408.106-5.07.31C3.806 2.45 3 3.414 3 4.517V17.25a.75.75 0 001.075.676L10 15.082l5.925 2.844A.75.75 0 0017 17.25V4.517c0-1.103-.806-2.068-1.93-2.207A41.403 41.403 0 0010 2z" clip-rule="evenodd" /></svg>`;
                 colorClass = 'bg-primary';
                 break;
             default:
                 icon = `<svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16z" clip-rule="evenodd" /></svg>`;
                 colorClass = 'bg-slate-400';
         }

         // Render link if URL is available
         const content = item.url
            ? `<a href="${item.url}" target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors hover:underline">${item.summary}</a>`
            : `<span class="font-medium text-slate-900 dark:text-white">${item.summary}</span>`;

         return `
           <li>
             <div class="relative pb-8">
               ${!isLast ? '<span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-slate-200 dark:bg-slate-700" aria-hidden="true"></span>' : ''}
               <div class="relative flex space-x-3">
                 <div>
                   <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white dark:ring-slate-900 ${colorClass}">
                     ${icon}
                   </span>
                 </div>
                 <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                   <div>
                     <p class="text-sm text-slate-600 dark:text-slate-300">${content}</p>
                   </div>
                   <div class="whitespace-nowrap text-right text-sm text-slate-500">
                     <time datetime="${item.date}">${new Date(item.date).toLocaleDateString(undefined, { month: 'short', day: 'numeric' })}</time>
                   </div>
                 </div>
               </div>
             </div>
           </li>
         `;
      }).join('');

      timelineLoading.classList.add('hidden');
      timelineList.classList.remove('hidden');

    } catch (e) {
      console.error(e);
      statsLoading.classList.add('hidden');
      statsError.classList.remove('hidden');
      timelineLoading.classList.add('hidden');
      timelineError.classList.remove('hidden');
    }
  }

  loadStats();
</script>
