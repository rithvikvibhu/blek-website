---
import Layout from '../components/Layout.astro';
import SocialIcon from '../components/SocialIcon.astro';

const links = [
  { label: 'Keybase', url: 'https://keybase.io/rithvikvibhu', icon: 'keybase' },
  { label: 'Twitter', url: 'https://twitter.com/rithvikvibhut', icon: 'twitter' },
  { label: 'Mastodon', url: 'https://mas.to/@rithvikvibhu', icon: 'mastodon', rel: 'me' },
  { label: 'GitHub', url: 'https://github.com/rithvikvibhu', icon: 'github' },
  { label: 'GitLab', url: 'https://gitlab.com/rithvikvibhu', icon: 'gitlab' },
  { label: 'Reddit', url: 'https://reddit.com/u/rithvikvibhu', icon: 'reddit' },
  { label: 'Discord', url: 'https://discord.com/users/283884875453562892', icon: 'discord' },
];
---

<Layout title="Links | Rithvik Vibhu">
  <div class="max-w-xl mx-auto">
    <h1 class="mt-4 text-3xl font-bold text-slate-900 dark:text-white mb-8 text-center">
      find me on the internet
    </h1>

    <div class="mt-12 flex flex-wrap justify-center gap-6">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel={`noopener noreferrer${link.rel ? ` ${link.rel}` : ''}`}
          class="group flex p-4 items-center justify-center rounded-full overflow-hidden transition-colors bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700"
          aria-label={link.label}
          title={link.label}
          data-umami-event="Social Link Click"
          data-umami-event-label={link.label}
        >
          <SocialIcon name={link.icon} size={48} />
        </a>
      ))}
    </div>

    <div class="mt-12 text-center">
      <p class="text-sm">
        PGP:
        <a
        href="/key.asc"
        class="text-sm font-mono underline select-all"
        data-umami-event="PGP Key Click"
        >
        0393 D763 6C08 EFA8 A781  F9CD E851 01DF 1682 E27F
      </a>
    </p>
    </div>
  </div>
</Layout>

