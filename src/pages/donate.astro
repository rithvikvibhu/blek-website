---
import Layout from '../components/Layout.astro';

const cryptoAddresses = [
  {
    name: 'Bitcoin (BTC)',
    address: 'bc1q8jvskkvgurepj7dx2gq4falw60xcvs9x5cpxwa',
    type: 'Bitcoin'
  },
  {
    name: 'Ethereum-like (ETH / POL / OP)',
    address: '0x216c12a2F7d04c6D4FE18d533f034A4F48c0151C',
    type: 'Ethereum'
  },
  {
    name: 'Solana (SOL)',
    address: 'GNJwAmC641hmwAQyJoUSoKcdnNZ2X1fdFNGYtsELhu4f',
    type: 'Solana'
  },
  {
    name: 'Handshake (HNS)',
    address: 'hs1qf4fjfv23lx6ucevx3d87pvfxvmd324n2cze5c4',
    type: 'Handshake'
  }
];
---

<Layout title="Support My Work | Rithvik Vibhu" description="If you like the things I work on and build, consider supporting it. Every contribution helps me dedicate focused time to open-source maintenance, feature development, and deep-dive write-ups.">
  <div class="max-w-3xl mx-auto space-y-14">

    <header class="space-y-5">
      <h1 class="text-4xl font-semibold text-slate-900 dark:text-white md:text-5xl">
        Support my work
      </h1>
      <p class="text-lg text-slate-700 dark:text-slate-300 md:text-xl">
        If you like the things I work on and build, consider supporting it.
        Every contribution helps me dedicate focused time to open-source
        maintenance, feature development, and deep-dive write-ups.
      </p>
    </header>

    <section>
      <div class="p-6 rounded-3xl bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 shadow-sm">
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
          <div>
            <p class="text-sm font-semibold tracking-wide text-slate-500 dark:text-slate-400 uppercase">
              GitHub Sponsors
            </p>
            <h2 class="mt-2 text-2xl font-medium text-slate-600 dark:text-slate-300">
              One-time or ongoing contribution
            </h2>
          </div>
          <a
            href="https://github.com/sponsors/rithvikvibhu"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center justify-center gap-3 px-5 py-2.5 text-sm font-semibold tracking-wide uppercase transition rounded-full shadow-sm bg-slate-700 dark:bg-slate-600 text-white hover:bg-slate-800 dark:hover:bg-slate-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-400"
            data-umami-event="GitHub Sponsor Button"
          >
            <span class="inline-flex w-5 h-5">
              <svg
                viewBox="0 0 16 16"
                aria-hidden="true"
                class="w-full h-full fill-white"
              >
                <path
                  d="M8 0C3.58 0 0 3.58 0 8a8 8 0 005.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2 .37-2.53-.49-2.69-.94a2.91 2.91 0 00-.78-1.14c-.27-.15-.66-.52-.01-.53a1.56 1.56 0 011.2.8 1.67 1.67 0 002.28.65 1.68 1.68 0 01.5-1.05c-1.78-.2-3.64-.89-3.64-3.95A3.09 3.09 0 013.83 5a2.87 2.87 0 01.08-2.12s.67-.21 2.2.8a7.63 7.63 0 014 0c1.53-1 2.2-.8 2.2-.8.44 1.11.16 1.93.08 2.12a3.09 3.09 0 01.82 2.15c0 3.07-1.87 3.75-3.65 3.95a1.89 1.89 0 01.54 1.47c0 1.06-.01 1.92-.01 2.18 0 .21.15.46.55.38A8 8 0 0016 8c0-4.42-3.58-8-8-8z"
                />
              </svg>
            </span>
            Sponsor on GitHub
          </a>
        </div>
      </div>
    </section>

    <section>
      <div class="p-6 rounded-3xl bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 shadow-sm">
        <div class="mb-6">
          <p class="text-sm font-semibold tracking-wide text-slate-500 dark:text-slate-400 uppercase">
            Crypto options
          </p>
        </div>

        <div class="grid gap-6 md:grid-cols-2">
          {cryptoAddresses.map((crypto) => (
            <article class="p-6 rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700">
              <h3 class="text-lg font-medium text-slate-900 dark:text-white">{crypto.name}</h3>
              <div class="flex items-start gap-2 mt-4">
                <code
                  class="flex-1 p-3 text-sm tracking-widest rounded-xl bg-slate-100 dark:bg-slate-900 text-slate-700 dark:text-slate-300 font-mono break-all"
                  data-address={crypto.address}
                >
                  {crypto.address}
                </code>
                <button
                  class="copy-btn shrink-0 p-2 text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200 transition-colors"
                  data-address={crypto.address}
                  data-type={crypto.type}
                  aria-label="Copy address"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                    />
                  </svg>
                </button>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

  </div>
</Layout>

<script>
  document.querySelectorAll('.copy-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const address = btn.getAttribute('data-address');
      const cryptoType = btn.getAttribute('data-type');

      // Track copy button click with Umami
      if ('umami' in window) {
        (window as any).umami.track(`Copy ${cryptoType} Address`, { address });
      }

      try {
        await navigator.clipboard.writeText(address || '(No address)');
        // Visual feedback
        const originalHTML = btn.innerHTML;
        btn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        `;
        btn.classList.add('text-primary', 'dark:text-primary');
        setTimeout(() => {
          btn.innerHTML = originalHTML;
          btn.classList.remove('text-primary', 'dark:text-primary');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>

