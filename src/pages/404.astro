---
import Layout from '../components/Layout.astro';
---

<Layout title="404 Not Found">
  <div class="text-center py-20">
     <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
     <p class="text-2xl text-slate-600 dark:text-slate-300 mb-8">Page not found</p>
     <a href="/" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-slate-900 bg-primary hover:brightness-110 transition-all shadow-sm hover:shadow hover:-translate-y-0.5" data-umami-event="404 - Go Home">
       Go Home
     </a>
  </div>
</Layout>

