---
import Layout from '../../components/Layout.astro';
import TagPill from '../../components/TagPill.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const { data } = project;
---

<Layout title={`${data.title} | Projects`}>
  <div class="max-w-5xl mx-auto">
    <a href="/projects" class="inline-flex items-center text-sm text-slate-500 hover:text-primary transition-colors mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 mr-1">
        <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd" />
      </svg>
      Back to Projects
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <article class="lg:col-span-2">
        <h1 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-6">{data.title}</h1>

        <div class="prose dark:prose-invert prose-slate prose-lg max-w-none">
          <Content />
        </div>
      </article>

      <aside class="space-y-8">
        <div class="bg-slate-50 dark:bg-slate-800/50 rounded-xl p-6 border border-slate-100 dark:border-slate-800 sticky top-24">
          <h3 class="text-sm font-bold uppercase tracking-wider text-slate-500 mb-4">Project Details</h3>

          <div class="space-y-4">
            {data.date && (
              <div>
                <div class="text-xs text-slate-500">Date</div>
                <div class="text-slate-900 dark:text-white font-medium">
                  {data.date.toLocaleDateString(undefined, { year: 'numeric', month: 'long' })}
                </div>
              </div>
            )}

            {data.languageTags && data.languageTags.length > 0 && (
              <div>
                <div class="text-xs text-slate-500 mb-2">Languages</div>
                <div class="flex flex-wrap gap-2">
                  {data.languageTags.map(tag => (
                    <TagPill tag={tag} />
                  ))}
                </div>
              </div>
            )}

            {data.toolTags && data.toolTags.length > 0 && (
              <div>
                <div class="text-xs text-slate-500 mb-2">Tools</div>
                <div class="flex flex-wrap gap-2">
                  {data.toolTags.map(tag => (
                    <TagPill tag={tag} />
                  ))}
                </div>
              </div>
            )}

            {data.domainTags && data.domainTags.length > 0 && (
              <div>
                <div class="text-xs text-slate-500 mb-2">Domains</div>
                <div class="flex flex-wrap gap-2">
                  {data.domainTags.map(tag => (
                    <TagPill tag={tag} />
                  ))}
                </div>
              </div>
            )}

            {(data.repo || data.website) && (
              <div class="pt-4 border-t border-slate-200 dark:border-slate-700 flex flex-col gap-3">
                {data.website && (
                  <a href={data.website} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-2 w-full py-2 bg-slate-900 dark:bg-white text-white dark:text-slate-900 rounded-lg font-medium hover:opacity-90 transition-opacity">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                      <path d="M12.232 4.232a2.5 2.5 0 013.536 3.536l-1.225 1.224a.75.75 0 001.061 1.06l1.224-1.224a4 4 0 00-5.656-5.656l-3 3a4 4 0 00.225 5.865.75.75 0 00.977-1.138 2.5 2.5 0 01-.14-3.667l3-3z" />
                      <path d="M11.603 7.963a.75.75 0 00-.977 1.138 2.5 2.5 0 01.14 3.667l-3 3a2.5 2.5 0 01-3.536-3.536l1.225-1.224a.75.75 0 00-1.061-1.06l-1.224 1.224a4 4 0 105.656 5.656l3-3a4 4 0 00-.225-5.865z" />
                    </svg>
                    Website
                  </a>
                )}
                {data.repo && (
                  <a href={data.repo} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-2 w-full py-2 border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-700 dark:text-white rounded-lg font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.1-1.47-1.1-1.47-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
                    </svg>
                    View Repository
                  </a>
                )}
              </div>
            )}
          </div>
        </div>
      </aside>
    </div>
  </div>
</Layout>

